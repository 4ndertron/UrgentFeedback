/*
 SERVICE/TROUBLESHOOTING Cases
 Inbound/Outbound queue

 TODO: Create the query, and add it to the automator, which will populate their workbook.

 */

WITH CASE_LIST AS (
    /*
     Required Fields:
     ----------------
     CREATED_DATE
     CASE_NUMBER
     SERVICE_NUMBER
     SERVICE_STATE
     OWNER
     ORIGIN
     QUEUE
     */

    SELECT TO_DATE(C.CREATED_DATE) AS CREATED_DATE
    , C.CASE_NUMBER
    , P.SERVICE_NAME AS SERVICE_NUMBER
    , P.SERVICE_STATE
    , C.OWNER
    , C.ORIGIN
    , C.SOLAR_QUEUE AS QUEUE
    FROM RPT.T_CASE AS C
    LEFT JOIN
        RPT.T_PROJECT AS P
    ON P.PROJECT_ID = C.PROJECT_ID
    WHERE C.CREATED_DATE >= DATE_TRUNC('M',DATEADD('MM',-1,CURRENT_DATE))
    AND C.RECORD_TYPE IN ('Solar - Troubleshooting', 'Solar - Service')
    AND C.SOLAR_QUEUE IN ('Inbound', 'Outbound')
)

SELECT *
FROM CASE_LIST